@using Wbtb.Core.Web; 
@model ViewJobBanner

<x-content>
    <x-cover class="--rounded jobBanner-cover" @ViewHelpers.StyleImageUrl(Model.Job.Image)>
        <div class="jobBanner-coverMask"></div>
        <h1 class="jobBanner-coverTitle">
            <a href="/">Jobs</a> / 
            @for (int i = 0; i < Model.BreadCrumbs.Count; i++)
            {
                @Model.BreadCrumbs[i]

                @if (i < Model.BreadCrumbs.Count - 1)
                {
                    <text>
                        /
                    </text>    
                }
            }

        </h1>
    </x-cover>
</x-content>