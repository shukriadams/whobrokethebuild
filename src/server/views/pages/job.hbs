{{#extend "layout"}}
    {{#content "body"}}
        <h1>{{job.name}}</h1>

        {{#if session.isAdmin}}
            <a href="/settings/job/{{job.id}}">
                <i class="icon icon-gear"></i>
            </a>
        {{/if}}

        <h2>Builds</h2>

        {{{pager ../job.__baseUrl jobBuilds }}}

        <ul class="list">
            {{#if jobBuilds.items}}
                {{#each jobBuilds.items}}
                    <li class="list-item card">
                        <div class="card-status card-status--{{statusTranslate status}}"></div>
                        <div class="card-content">
                            <div>
                                <a class="job-buildTitle" href="/build/{{id}}">
                                    # {{build}}
                                </a>
                            </div>
                            <div>
                                Status : {{statusTranslate status}}, {{deltaTranslate delta}}
                            </div>
                            <div>
                                {{ago started}} @ {{shortTime started}}
                            </div>
                        </div>    

                        <ul class="card-content">
                            {{#each __revisions}}
                                <li_>
                                    <div>
                                        {{revision}} -                                         by 
                                        {{#if __user}}
                                            <a href="/user/{{__user.id}}">{{__user.name}}</a>
                                        {{else}}
                                            {{user}}
                                        {{/if}}

                                        {{gistOf description 100 "..."}} 

                                    </div>
                                </li_>
                            {{/each}}
                        </ul>
                    </li>
                {{/each}}

            {{else}}
                This job hasn't built yet
            {{/if}}

        </ul>

    {{/content}}
{{/extend}}


