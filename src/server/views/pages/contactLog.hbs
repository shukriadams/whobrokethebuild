{{#extend "layout"}}
    {{#content "body"}}
        <h1>Notifications</h1>
        <ul>
            {{#if contactLogs.items}}
                {{#each contactLogs.items}}
                    <li>
                        <div>
                            <a href="/user/{{__user.id}}">{{__user.name}}</a>
                        </div>
                        <div>
                            {{context}}
                        </div>
                        <div>
                            {{ago __user.created}}
                        </div>
                    </li>
                {{/each}}

                {{{pager "/contactLog" contactLogs }}}
                
            {{else}}
                <p>
                    No alerts have been sent out yet.
                </p>
            {{/if}}

        </ul>
    {{/content}}
{{/extend}}


