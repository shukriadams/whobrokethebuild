{{#extend "layout"}}
    {{#content "body"}}
        <h1>System settings</h1>
        
        <h2>CI Servers</h2>
        <ul class="list">
            {{#each ciservers}}
                <li class="list-item">
                    <div>
                        <a href="/settings/ciserver/{{this.id}}">{{this.name}}</a>
                    </div>
                    <div>
                        {{this.url}}
                    </div>
                </li>
            {{/each}}
        </ul>
        <a href="/settings/ciserver">New CIServer</a>

        <h2>Version Control Servers</h2>
        <ul class="list">
            {{#each vcservers}}
                <li class="list-item">
                    <div>
                        <a href="/settings/vcserver/{{this.id}}">{{this.name}}</a>
                    </div>
                    <div>
                        {{this.url}}
                    </div>
                </li>
            {{/each}}
        </ul>
        <a href="/settings/vcserver">New VCServer</a>

        <h2>Plugins</h2>
        <ul class="list">
            {{#each pluginLinks}}
                <li class="list-item">
                    <a href="{{url}}">{{text}}</a>
                </li>
            {{/each}}
        </ul>

    {{/content}}
{{/extend}}


