{{#extend "layout"}}
    {{#content "body"}}
        <div>
            <h1>{{user.name}}</h1>
            {{#if session.canViewUserPage}}
                <a href="/settings/user/{{user.id}}">Settings</a>
            {{/if}}

            <h2>{{user.name}}'s recent builds</h2>
            <ul class="list">
                {{#each buildInvolvements}}
                    <li class="list-item card">
                        <div class="card-status card-status--{{statusTranslate __build.status}}"></div>

                        <div class="card-content">
                            <a href="/build/{{__build.id}}">{{__build.build}} - {{__build.__job.name}}</a>
                            {{ago __build.started}}
                        </div>
                    </li>
                {{/each}}
            </ul>

        </div>
    {{/content}}
{{/extend}}


