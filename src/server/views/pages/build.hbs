{{#extend "layout"}}
    {{#content "body"}}
        <ul class="list build">

            <li>
                <div class="card">
                    <div class="card-status card-status--{{statusTranslate __latestBuild.status}}"></div>
                    <div class="card-content">
                        <h1>Build {{build.build}}</h1>
                        <p>
                            Status : {{statusTranslate build.status}}{{#if build.delta}}, {{deltaTranslate build.delta}}{{/if}}
                        </p>
                    </div>
                </div>

                <p>
                    Job : <a href="/job/{{build.jobId}}">{{build.__job.name}}</a>
                </p>
                {{#if session.isAdmin}}
                    <button class="button build-delete" data-id="{{build.id}}">Delete build</button>    
                {{/if}}
            </li>

            <li>
                <h2>Revisions</h2>
                <ul>
                    {{#if build.__buildInvolvements}}
                        {{#each build.__buildInvolvements}}
                            <li>
                                <div>
                                    {{>buildInvolvementUserLink this}}
                                </div>
                                {{__revision.description}}
                                <ul>
                                    {{#each __revision.files}}
                                        <li>
                                            {{this.file}}
                                        </li>
                                    {{/each}}
                                </ul>

                            </li>
                        {{/each}}
                    {{else}}
                        <li>
                            That's odd - there are no revisions in this build?
                        </li>
                    {{/if}}
                </ul>
            </li>

            <li class="build-log">
                <h2>Log</h2>

                <p>
                    {{{preserveSpaces build.log}}}
                </p>
                <p class="build-logParserName">
                    {{#if build.__job.logParser}}
                        Log parsed with : {{build.__job.logParser}}
                    {{else}}
                        No log parser set
                    {{/if}}
                </p>
                <div>
                    <a href="/build/log/{{build.id}}">Full log</a>
                </div>
            </li>

        </ul>

    {{/content}}
{{/extend}}


