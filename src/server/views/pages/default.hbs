{{#extend "layout"}}
    {{#content "body"}}
        <div>
            {{#if jobs}}
                <ul class="list">
                    {{#each jobs}}
                        <li class="card list-item {{#if __breakingBuild}}list-item--error{{/if}}">

                            <div class="card-section ">
                                <div class="card-status card-status--{{statusTranslate __latestBuild.status}}">

                                </div>
                            </div>

                            <div class="card-section">
                                <a class="card-title" href="/job/{{id}}">{{name}}</a>

                                {{#if __latestBuild}}
                                        last build was <a href="/build/{{__latestBuild.id}}">{{__latestBuild.build}}</a> ({{ago __latestBuild.ended}}), and is {{statusTranslate __latestBuild.status}}
                                {{else}}
                                    hasn't run yet
                                {{/if}}       
                            </div>

                            {{#if __breakingBuild}}
                                <div>
                                    Broke @ {{__breakingBuild.build}} ({{ago __breakingBuild.started}})
                                </div>             
                                {{#if __breakingBuild.__buildInvolvements}}
                                    Broken by : 
                                    {{#each __breakingBuild.__buildInvolvements}}
                                        {{#if __user}}
                                            <a href="/user/{{__user.id}}">{{__user.name}}</a>
                                        {{else}}
                                            {{externalUsername}}
                                        {{/if}}
                                    {{/each}}
                                {{/if}}
                            {{/if}}
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>
                    There are currently no builds to show
                </p>
            {{/if}}
        </div>
    {{/content}}
{{/extend}}
