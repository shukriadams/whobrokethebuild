{{#extend "layout"}}
    {{#content "body"}}
        <div class="wbtbSlack-settings">
            <form action="/wbtb-slack/settings" method="POST">
                <h1>Slack Settings</h1>
                <div>
                    {{#if jobs}}
                        <x-list>
                            {{#each jobs}}
                                <x-list-row>
                                    <x-list-cell>
                                        <div>{{name}}</div>
                                        <div>
                                            <select name="select_{{id}}">
                                                {{#each ../channels}}
                                                    <option value="{{id}}" {{#eq id ../__contactMethod.channelId}}selected{{/eq}}>{{name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </x-list-cell>
                                </x-list-row>
                            {{/each}}
                        </x-list>
                    {{else}}
                        No Jobs set yet - create one to assign it's alerts to a Slack channel.
                    {{/if}}
                </div>                
                <div>
                    <input type="checkbox" name="cb_enableMessaging" id="cb_enableMessaging" {{#if enableMessaging}}checked{{/if}} />
                    <label for="cb_enableMessaging">Enable messaging</label>
                </div>
                
                <button class="button" type="submit">Update</button>
            </form>
        </div>
    {{/content}}
{{/extend}}

